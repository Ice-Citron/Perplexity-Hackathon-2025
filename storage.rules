rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read access for article images
    match /article-images/{imageId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }

    // Public read access for all files (for now, can restrict later)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
